{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist/",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "filesGlob": [
    "src/app.ts",
    "typings/index.d.ts"
  ],
  "files": [
    "src/app.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}